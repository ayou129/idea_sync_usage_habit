// 将键绑定放在此文件中以覆盖默认值
[
    // other 转到文件
    //// phpstorm shift+shift
    //// vscode   command++p
    {
        "key": "alt+cmd+l",
        "command": "editor.action.formatDocument", // 格式化文件
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+r",
        "command": "editor.action.startFindReplaceAction", // 文件内替换
        "when": "editorTextFocus"
    },
    {
        "key": "shift+cmd+r",
        "command": "workbench.action.replaceInFiles" // 全局替换
    },
    {
        "key": "cmd+d",
        "command": "editor.action.copyLinesDownAction", // 向下复制行
        "when": "editorTextFocus"
    },
    {
        "key": "shift+cmd+space",
        "command": "workbench.action.showCommands", // 打开命令
        "when": "editorTextFocus"
    }
]